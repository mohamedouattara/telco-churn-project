{% extends 'base.html.twig' %}
                            {% block title %}Etudiant index{% endblock %}
                            
                            {% block body %}
                                <h1>Etudiant index</h1>
                            
                                <table class="table">
                                    <thead>
                                        <tr>
                                        <th>Nom</th><th>Age</th><th>Datedenaissance</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for etudiant in etudiants %}
                                        <tr>
                                        <td>{{etudiant.nom}}</td><td>{{etudiant.age}}</td><td>{{etudiant.datedenaissance|date('d-m-Y')}}</td>
                                            <td>
                                                <a href="{{ path('etudiant_show', {'id': etudiant.id}) }}">show</a>
                                                <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            
                                <a href="{{ path('etudiant_new') }}">Create new</a>
                            {% endblock %}